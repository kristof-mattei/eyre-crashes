    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'eyre-crashes'",
            "cargo": {
                "args": ["build", "--bin=eyre-crashes", "--package=eyre-crashes"],
                "filter": {
                    "name": "eyre-crashes",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,eyre_crashes=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'eyre-crashes'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=eyre-crashes",
                    "--package=eyre-crashes"
                ],
                "filter": {
                    "name": "eyre-crashes",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,eyre_crashes=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration_tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_tests",
                    "--package=eyre-crashes"
                ],
                "filter": {
                    "name": "integration_tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,eyre_crashes=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        }
    ]
}
